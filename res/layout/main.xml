<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your credentials below"
            android:id="@+id/textView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Username: "
            android:id="@+id/textView1"
            android:textSize="24dp"
            android:layout_alignParentLeft="true" android:layout_marginLeft="8dp" android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/username" android:layout_toRightOf="@+id/textView1"
            android:layout_alignRight="@+id/password" android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="32dp" android:text="Password: "
              android:id="@+id/textView2" android:textSize="24dp"
              android:layout_alignLeft="@+id/textView1" android:layout_alignParentTop="true"
              android:layout_marginTop="76dp"/>
    <EditText
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/password" android:layout_toRightOf="@+id/textView1"
            android:layout_alignTop="@+id/textView2" android:password="true"
            android:layout_alignBottom="@+id/textView2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/button" android:layout_alignRight="@+id/textView1" android:layout_alignParentTop="true"
            android:layout_marginTop="225dp"
            android:onClick="login" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:id="@+id/button1"
            android:layout_alignRight="@+id/username" android:layout_alignTop="@+id/button"
            android:onClick="addUser" />

</RelativeLayout>