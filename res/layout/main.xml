<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your credentials below"
            android:id="@+id/textView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:textSize="17dp" android:layout_above="@+id/username"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Username: "
            android:id="@+id/textView1"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/textView" android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/username"
            android:layout_toRightOf="@+id/textView1" android:layout_alignTop="@+id/textView1"
            android:layout_alignRight="@+id/password"/>
    <TextView android:layout_width="wrap_content" android:layout_height="24dp" android:text="Password: "
              android:id="@+id/textView2" android:textSize="20dp"
              android:layout_alignLeft="@+id/textView" android:layout_alignParentTop="true"
              android:layout_marginTop="123dp"/>
    <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/password" android:layout_toRightOf="@+id/textView1"
            android:layout_alignTop="@+id/textView2" android:password="true"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/button" android:layout_alignRight="@+id/textView1" android:layout_alignParentTop="true"
            android:layout_marginTop="225dp"
            android:onClick="login" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:id="@+id/button1"
            android:layout_alignRight="@+id/username" android:layout_alignTop="@+id/button"
            android:onClick="addUser" />

</RelativeLayout>